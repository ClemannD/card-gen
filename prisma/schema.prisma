// Playwright Automation Schema
// ============================

generator client {
  provider = "prisma-client-js"
  output   = "../.generated/prisma"
}

// Database Configuration
// Using SQLite for portability (single file, no server needed)
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Automation Models
// =================

/// Configuration for automation scripts
model Config {
  id        String   @id @default(cuid())
  name      String
  settings  String   // JSON blob for flexible config storage
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  runs      Run[]
}

/// Record of automation script executions
model Run {
  id        String    @id @default(cuid())
  configId  String
  status    String    // pending, running, success, error
  output    String    @default("") // Captured console output
  error     String?   // Error message if failed
  startedAt DateTime  @default(now())
  endedAt   DateTime?

  config Config @relation(fields: [configId], references: [id], onDelete: Cascade)

  @@index([configId])
  @@index([status])
}

// App Settings
// ============

/// Application settings stored in database (singleton)
model Settings {
  id                    String   @id @default("default")
  airwallexClientId     String   @default("")
  airwallexApiKey       String   @default("")
  airwallexEnv          String   @default("demo") // demo or prod
  airwallexCardholderId String   @default("")
  updatedAt             DateTime @updatedAt
}

// Card Issuing Models
// ===================

/// Virtual card created via Airwallex API
model Card {
  id              String   @id @default(cuid())
  airwallexCardId String   @unique // Airwallex's card ID
  nickname        String // Card nickname/display name
  cardNumber      String // Full card number (sensitive)
  cvv             String // Card verification value (sensitive)
  expiryMonth     Int // Card expiry month (1-12)
  expiryYear      Int // Card expiry year (e.g., 2025)
  nameOnCard      String // Cardholder name on card
  status          String   @default("active") // active, frozen, cancelled
  createdAt       DateTime @default(now())

  @@index([status])
  @@index([createdAt])
}
